<Window x:Class="Avto1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Avto1"
        mc:Ignorable="d"
        Title="Авторизация" Background="White" Width="506">

    <Grid Height="290" RenderTransformOrigin="1.007,0.518" HorizontalAlignment="Left" Width="500">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="900"/>
        </Grid.ColumnDefinitions>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Height="231" Width="326" Margin="80,0,0,0">
            <TextBlock Text="Логин:"/>
            <TextBox x:Name="txtbLogin" Width="222"/>
            <TextBlock Text="Пароль:"/>
            <TextBox x:Name="txtPassword" Width="218"/>
            <StackPanel Orientation="Horizontal" Height="80" HorizontalAlignment="Center">
                <Button x:Name="btnEnter" Content="Войти" Click="btnEnter_Click" Width="95" Height="36" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
